const request = require("supertest");
const fs = require("fs");

const BASE_URL = "http://localhost:4000"; // Substitua pela URL da sua API
const getToken = async () => {
  const response = await request(BASE_URL).post("/login").send({
    email: "teste@eucorrijo.com", // Substitua com um email válido
    password: "abcd1234",       // Substitua com uma senha válida
  });
  return response.body.token;
};

describe("Document Routes", () => {
  let token;
  let documentUuid;

  beforeAll(async () => {
    token = await getToken();
  });

  test("Deve listar todos os documentos", async () => {
    const response = await request(BASE_URL)
      .get("/document")
      .set("Authorization", `Bearer ${token}`);

    expect(response.status).toBe(200);
    expect(Array.isArray(response.body)).toBe(true);
  });

  test("Deve criar um novo documento", async () => {
    const response = await request(BASE_URL)
      .post("/document")
      .set("Authorization", `Bearer ${token}`)
      .send({
        name: "Documento Teste",
        description: "Descrição do documento de teste",
      });

    expect(response.status).toBe(200);
    expect(response.body).toHaveProperty("uuid");

    documentUuid = response.body.uuid;
  });

  test("Deve obter detalhes de um documento específico", async () => {
    const response = await request(BASE_URL)
      .get(`/document/${documentUuid}`)
      .set("Authorization", `Bearer ${token}`);

    expect(response.status).toBe(200);
    expect(response.body).toHaveProperty("uuid", documentUuid);
  });

  test("Deve atualizar um documento", async () => {
    const response = await request(BASE_URL)
      .put(`/document/${documentUuid}`)
      .set("Authorization", `Bearer ${token}`)
      .send({
        name: "Documento Teste Atualizado",
      });

    expect(response.status).toBe(200);
    expect(response.body.message).toBe("Documento atualizado com sucesso");
  });

  test("Deve excluir um documento", async () => {
    const response = await request(BASE_URL)
      .delete(`/document/${documentUuid}`)
      .set("Authorization", `Bearer ${token}`);

    expect(response.status).toBe(200);
    expect(response.body.message).toBe("Documento removido com sucesso");
  });

  test("Não deve criar um documento sem nome", async () => {
    const response = await request(BASE_URL)
      .post("/document")
      .set("Authorization", `Bearer ${token}`)
      .send({
        description: "Documento sem nome",
      });

    expect(response.status).toBe(400);
    expect(response.body.message).toBe("Erro ao criar documento");
  });
});




